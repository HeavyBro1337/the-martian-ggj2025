















extends AnimatedSprite2D



@export var frame_sounds: Array[AudioStream]


@onready var audio_stream_player: AudioStreamPlayer = $AudioStreamPlayer






































































































































































































































































































































































































































































@export var last_frame: int = 9
@export var is_intro: bool = true



func _process(delta: float) -> void:
    
    if Input.is_action_just_pressed("collect"):
        frame += 1
        audio_stream_player.stream = frame_sounds[frame]
        audio_stream_player.play()
        if frame == last_frame:
            _on_animation_finished()























































































































































































































































































































































































































































































































































































































































func _on_animation_finished() -> void:
    if is_intro:
        get_tree().change_scene_to_file("res://nodes/main.tscn")
        return
    get_tree().change_scene_to_file("res://nodes/ui/title_screen.tscn")
